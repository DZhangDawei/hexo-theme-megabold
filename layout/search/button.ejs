                <button type="search" class="search-field search-btn" style="height: 42px;" placeholder=" <%= __('search') %>â€¦" value="" name="s" title="Search for:"><i class="fa fa-search" style=""></i></button>
            </label>
        </form>
        <%- partial('search/insight') %>
    <% } else if (theme.search.swiftype) { %>
        <form class="search-form">
            <input type="text" class="st-default-search-input search-form-input" placeholder="<%= __('search') %>" />
